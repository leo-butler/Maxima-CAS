} else {
    set fontFamily helvetica
}

if { [catch { set buttonfont} ] } {
  set buttonfont [font create -family $fontFamily -size $fontSize]
}

package require msgcat
namespace import msgcat::*

proc M {str args} {
    if {$args == ""} {return $str}
    return [eval [list format $str] $args]
}

