gear_graph(n) := block(
  [g:cycle_graph(2*n)],
  add_vertex(2*n, g),
  connect_vertices([2*n], makelist(2*i,i,0,n-1),g),
  block([numer:true],
    set_positions(
      append(
        [[2*n, [0,0]]],
        makelist([i, [sin(i*%pi/n), cos(i*%pi/n)]], i, 0, 2*n, 2),
        makelist([i+1, 1.5*[sin((i+1)*%pi/n), cos((i+1)*%pi/n)]], i, 0, 2*n, 2)),
      g)),
  g)$

