NTERMS(%);
CONMETDERIV(H2,G)$
H3:GEODESIC(%,G)$
NTERMS(%);
H4:CANFORM(RENAME(EXPAND(H3)))$
LENGTH(H4);
H5:CANTEN(rename(H4))$
SHOW(%)$
UNDIFF(H5)$
EV(%,CHR2)$
H6:EV(%,DIFF)$
NTERMS(%);
H7:CANFORM(RENAME(EXPAND(H6)))$
LENGTH(%);
SHOW(H7)$
CONMETDERIV(H7,G)$
H8:GEODESIC(%,G)$
NTERMS(%);
SHOW(CANTEN(rename(H8)))$
